@model DuAnLTW.Models.Category

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<div style="margin: 10px auto; width: 70%;">
    <h2 style="text-align: center">CHỈNH SỬA NHÓM SẢN PHẨM</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "textdanger" })
            @Html.HiddenFor(model => model.Id)
            <div class="form-group">
                MÃ NHÓM SẢN PHẨM:
                <div class="col-md-10">
                    @Html.EditorFor(model => model.IDCate, new
                    {
                   htmlAttributes = new { @class = "form-control", @readonly = "readonly" }
                   })
                    @Html.ValidationMessageFor(model => model.IDCate, "",
                   new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                TÊN NHÓM SẢN PHẨM:
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NameCate, new
                    {
                   htmlAttributes = new { @class = "form-control" }
                    })
                    @Html.ValidationMessageFor(model => model.NameCate, "",
                   new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10 mb-3 mt-3">
                    <input type="submit" value="LƯU" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
    <div>
        @Html.ActionLink("TRỞ LẠI", "Index")
    </div>
</div>