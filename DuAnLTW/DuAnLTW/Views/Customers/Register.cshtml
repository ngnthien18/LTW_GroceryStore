@model DuAnLTW.Models.Customer

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}
<h3 style="font:bold;text-align:center">ĐĂNG KÍ KHÁCH HÀNG</h3>
<div style="width:70%;margin:auto;border:2px gray solid;padding:20px;border-radius: 20px;">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="mb-3 mt-3">
                TÊN TÀI KHOẢN
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            EMAIL
            <div class="mb-3 mt-3">
                @Html.EditorFor(model => model.EmailCus, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.EmailCus, "", new { @class = "text-danger" })
            </div>
        </div>
        

        <div class="form-group">
            MẬT KHẨU
            <div class="mb-3 mt-3">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            SỐ ĐIỆN THOẠI
            <div class="mb-3 mt-3">
                @Html.EditorFor(model => model.PhoneCus, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PhoneCus, "", new { @class = "text-danger" })
            </div>
        </div>

        <button type="submit" class="btn btn-primary">XÁC NHẬN</button>
    }

</div>

    

