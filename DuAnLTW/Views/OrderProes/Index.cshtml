@model IEnumerable<DuAnLTW.Models.OrderPro>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<div style="margin: 10px auto; width: 90%;">
    <h2 style="text-align: center">THÔNG TIN ĐƠN HÀNG</h2>
    <p>
        @Html.ActionLink("TẠO MỚI", "Create", null, new {@class="btn btn-primary"})
    </p>
    <table class="table">
        <tr>
            <th>
                NGÀY ĐẶT HÀNG
            </th>
            <th>
                ĐỊA CHỈ
            </th>
            <th>
                TÊN KHÁCH HÀNG
            </th>
            <th>LỆNH</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOrder)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AddressDeliverry)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer.NameCus)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.ID }, new { @class = "btn btn-success" }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.ID }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.ID }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</div>
