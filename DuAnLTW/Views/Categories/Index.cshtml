@model IEnumerable<DuAnLTW.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<div style="margin: 10px auto; width: 90%;">
    <h2 style="text-align: center">THÔNG TIN LOẠI SẢN PHẨM</h2>
    <p>
        <a href="/Categories/Create" class="btn btn-warning"> Tạo mới </a>
    </p>
    <table class="table">
        <tr>
            <th>
                MÃ LOẠI SẢN PHẨM
            </th>
            <th>
                TÊN LOẠI SẢN PHẨM
            </th>
            <th>
                LỆNH
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IDCate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NameCate)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.Id }, new { @class = "btn btn-success"}) 
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.Id },new { @class = "btn btn-primary" }) 
                    @Html.ActionLink("Xóa", "Delete", new { id = item.Id }, new {@class = "btn btn-danger"})
                </td>
            </tr>
        }
    </table>
</div>
