@model DuAnLTW.Models.AdminUser

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<style>
    .field-validation-error {
        color: red;
    }
</style>
<h2 style="text-align:center">ĐĂNG NHẬP</h2>
<div style="border:2px solid gray;border-radius:20px;padding:20px;width:60%;margin:auto;">
    @using (Html.BeginForm("LoginAcount", "LoginUser"))
    {
        <input type="hidden" value="@Session["chon"]" name="chon" />
        @Html.AntiForgeryToken()
        <table>
            <tr>
                <td style="padding: 5px">Mã Quản Lý</td>
                <td>@Html.TextBoxFor(model => model.ID, new { style = "filed-validationerror" })</td>
                <td>@Html.ValidationMessageFor(model => model.ID)</td>
            </tr>
            <tr>
                <td style="padding: 5px">Mật khẩu</td>
                <td>@Html.EditorFor(model => model.PasswordUser)</td>
                <td>@Html.ValidationMessageFor(model => model.PasswordUser)</td>
                @if (ViewBag.ErrorInfo == null)
                {
                    <p>@ViewBag.ErrorInfo</p>
                }
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="Đăng nhập" class="btn btn-primary" /></td>
            </tr>
        </table>
    }
</div>