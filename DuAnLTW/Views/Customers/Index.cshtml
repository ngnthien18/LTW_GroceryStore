@model IEnumerable<DuAnLTW.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<div style="margin: 10px auto; width: 90%;">
    <h2 style="text-align: center">THÔNG TIN KHÁCH HÀNG</h2>
    <p>
        @Html.ActionLink("TẠO MỚI", "Create", null, new {@class="btn btn-primary"})
    </p>
    <table class="table">
        <tr>
            <th>
                TÊN KHÁCH HÀNG
            </th>
            <th>
                ĐIỆN THOẠI
            </th>
            <th>
                EMAIL
            </th>
            <th>
                TÊN ĐĂNG NHẬP
            </th>
            <th>
                MẬT KHẨU
            </th>
            <th>LỆNH</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NameCus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneCus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailCus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.IDCus }, new {@class="btn btn-success"}) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.IDCus }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.IDCus }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</div>
